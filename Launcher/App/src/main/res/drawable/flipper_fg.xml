<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="-20dp" android:right="-20dp" android:top="-20dp" android:bottom="-20dp">
        <shape android:shape="rectangle">
            <stroke android:color="#3FFF" android:width="21dp"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

    <item>
        <selector>
            <item android:state_hovered="true" android:state_pressed="false">
                <color android:color="#1FFF"/>
            </item>
            <item android:state_focused="true" android:state_pressed="false">
                <color android:color="#1FFF"/>
            </item>
            <item android:state_pressed="true">
                <color android:color="#4333"/>
            </item>
        </selector>
    </item>
    <item android:left="-20dp" android:right="-20dp" android:top="-20dp" android:bottom="-20dp">
        <shape android:shape="rectangle">
            <stroke android:color="#393939" android:width="20dp"/>
            <corners android:radius="24dp"/>
        </shape>
    </item>

</layer-list>