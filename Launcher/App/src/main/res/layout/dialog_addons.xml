<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bkg_dialog"
    android:clipChildren="true"
    android:orientation="vertical"
    android:padding="0dp"
    tools:ignore="TextSizeCheck">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <View
            android:id="@+id/view"
            android:layout_width="460dp"
            android:layout_height="wrap_content" />

        <TextView
            style="@style/SettingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:text="@string/addons_main" />

        <TextView
            style="@style/SettingsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/addons_info"
            android:textColor="#A0FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/addonMessenger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_shortcut_messenger"
                    tools:ignore="DuplicateIds" />

                <TextView
                    style="@style/SettingSubtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="1"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="0dp"
                    android:text="@string/addons_messenger"
                    tools:layout_gravity="bottom" />

                <LinearLayout
                    android:id="@+id/addonUninstall"
                    android:layout_width="120sp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bkg_button"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:ignore="DuplicateIds"
                    tools:visibility="gone">

                    <TextView
                        style="@style/SettingButtonLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="35dp"
                        android:singleLine="true"
                        android:text="@string/addons_uninstall"
                        tools:ignore="NestedWeights,RtlSymmetry" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="-35dp"
                        android:layout_marginEnd="-8dp"
                        android:src="@drawable/ic_uninstall" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addonInstall"
                    android:layout_width="120sp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bkg_button"
                    android:backgroundTint="#FFFFFF"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:ignore="DuplicateIds"
                    tools:visibility="gone">

                    <TextView
                        style="@style/SettingButtonLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="35dp"
                        android:singleLine="true"
                        android:text="@string/addons_install"
                        android:textColor="#000000"
                        tools:ignore="NestedWeights,RtlSymmetry" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="-35dp"
                        android:layout_marginEnd="-8dp"
                        android:src="@drawable/ic_download"
                        android:tint="#000000"
                        tools:ignore="UseAppTint" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addonUpdate"
                    android:layout_width="120sp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bkg_button"
                    android:backgroundTint="#FFFFFF"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:ignore="DuplicateIds"
                    tools:visibility="visible">

                    <TextView
                        style="@style/SettingButtonLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="35dp"
                        android:singleLine="true"
                        android:text="@string/addons_update"
                        android:textColor="#000000"
                        tools:ignore="NestedWeights,RtlSymmetry" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="-35dp"
                        android:layout_marginEnd="-8dp"
                        android:src="@drawable/ic_update"
                        android:tint="#000000"
                        tools:ignore="UseAppTint" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addonActivate"
                    android:layout_width="120sp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bkg_button"
                    android:backgroundTint="#FFFFFF"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:ignore="DuplicateIds">

                    <TextView
                        style="@style/SettingButtonLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="30dp"
                        android:singleLine="true"
                        android:text="@string/addons_activate"
                        android:textColor="#000000"
                        tools:ignore="NestedWeights,RtlSymmetry" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="-35dp"
                        android:layout_marginEnd="-8dp"
                        android:src="@drawable/ic_activate"
                        android:tint="#000000"
                        tools:ignore="UseAppTint" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/SettingsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="38dp"
                android:minHeight="80sp"
                android:text="@string/addons_messenger_desc" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/addonExplore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_shortcut_explore"
                    tools:ignore="DuplicateIds" />

                <TextView
                    style="@style/SettingSubtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|start"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="1"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:paddingEnd="0dp"
                    android:text="@string/addons_explore"
                    tools:layout_gravity="bottom" />

                <LinearLayout
                    android:id="@+id/addonUninstall"
                    android:layout_width="120sp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bkg_button"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:ignore="DuplicateIds"
                    tools:visibility="gone">

                    <TextView
                        style="@style/SettingButtonLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="35dp"
                        android:singleLine="true"
                        android:text="@string/addons_uninstall"
                        tools:ignore="NestedWeights,RtlSymmetry" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="-35dp"
                        android:layout_marginEnd="-8dp"
                        android:src="@drawable/ic_uninstall" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addonInstall"
                    android:layout_width="120sp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bkg_button"
                    android:backgroundTint="#FFFFFF"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:ignore="DuplicateIds"
                    tools:visibility="gone">

                    <TextView
                        style="@style/SettingButtonLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="35dp"
                        android:singleLine="true"
                        android:text="@string/addons_install"
                        android:textColor="#000000"
                        tools:ignore="NestedWeights,RtlSymmetry" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="-35dp"
                        android:layout_marginEnd="-8dp"
                        android:src="@drawable/ic_download"
                        android:tint="#000000"
                        tools:ignore="UseAppTint" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addonUpdate"
                    android:layout_width="120sp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bkg_button"
                    android:backgroundTint="#FFFFFF"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:ignore="DuplicateIds"
                    tools:visibility="visible">

                    <TextView
                        style="@style/SettingButtonLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="35dp"
                        android:singleLine="true"
                        android:text="@string/addons_update"
                        android:textColor="#000000"
                        tools:ignore="NestedWeights,RtlSymmetry" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="-35dp"
                        android:layout_marginEnd="-8dp"
                        android:src="@drawable/ic_update"
                        android:tint="#000000"
                        tools:ignore="UseAppTint" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addonActivate"
                    android:layout_width="120sp"
                    android:layout_height="35dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bkg_button"
                    android:backgroundTint="#FFFFFF"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    tools:ignore="DuplicateIds">

                    <TextView
                        style="@style/SettingButtonLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="30dp"
                        android:singleLine="true"
                        android:text="@string/addons_activate"
                        android:textColor="#000000"
                        tools:ignore="NestedWeights,RtlSymmetry" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="-35dp"
                        android:layout_marginEnd="-8dp"
                        android:src="@drawable/ic_activate"
                        android:tint="#000000"
                        tools:ignore="UseAppTint" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/SettingsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="45dp"
                android:minHeight="60sp"
                android:text="@string/addons_explore_desc" />

            <LinearLayout
                android:id="@+id/disableExplore"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="44dp"
                android:layout_marginEnd="120sp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bkg_button"
                android:orientation="horizontal"
                tools:ignore="DuplicateIds">

                <TextView
                    style="@style/SettingButtonLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="35dp"
                    android:singleLine="true"
                    android:text="@string/addons_explore_disable"
                    tools:ignore="NestedWeights,RtlSymmetry" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-25dp"
                    android:layout_marginEnd="-8dp"
                    android:src="@drawable/ic_launch_out"
                    tools:ignore="UseAppTint" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/addonLibrary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_shortcut_lib"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        style="@style/SettingSubtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|start"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:layout_weight="1"
                        android:paddingStart="0dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="0dp"
                        android:text="@string/addons_library"
                        tools:layout_gravity="bottom" />

                    <LinearLayout
                        android:id="@+id/addonUninstall"
                        android:layout_width="120sp"
                        android:layout_height="35dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/bkg_button"
                            android:orientation="horizontal"
                        android:visibility="gone"
                        tools:ignore="DuplicateIds"
                        tools:visibility="gone">

                        <TextView
                            style="@style/SettingButtonLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="35dp"
                            android:singleLine="true"
                            android:text="@string/addons_uninstall"
                            tools:ignore="NestedWeights,RtlSymmetry" />

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="-35dp"
                            android:layout_marginEnd="-8dp"
                            android:src="@drawable/ic_uninstall" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/addonInstall"
                        android:layout_width="120sp"
                        android:layout_height="35dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/bkg_button"
                        android:backgroundTint="#FFFFFF"
                            android:orientation="horizontal"
                        android:visibility="gone"
                        tools:ignore="DuplicateIds"
                        tools:visibility="gone">

                        <TextView
                            style="@style/SettingButtonLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="35dp"
                            android:singleLine="true"
                            android:text="@string/addons_install"
                            android:textColor="#000000"
                            tools:ignore="NestedWeights,RtlSymmetry" />

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="-35dp"
                            android:layout_marginEnd="-8dp"
                            android:src="@drawable/ic_download"
                            android:tint="#000000"
                            tools:ignore="UseAppTint" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/addonUpdate"
                        android:layout_width="120sp"
                        android:layout_height="35dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/bkg_button"
                        android:backgroundTint="#FFFFFF"
                            android:orientation="horizontal"
                        android:visibility="gone"
                        tools:ignore="DuplicateIds"
                        tools:visibility="visible">

                        <TextView
                            style="@style/SettingButtonLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="35dp"
                            android:singleLine="true"
                            android:text="@string/addons_update"
                            android:textColor="#000000"
                            tools:ignore="NestedWeights,RtlSymmetry" />

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="-35dp"
                            android:layout_marginEnd="-8dp"
                            android:src="@drawable/ic_update"
                            android:tint="#000000"
                            tools:ignore="UseAppTint" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/addonActivate"
                        android:layout_width="120sp"
                        android:layout_height="35dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/bkg_button"
                        android:backgroundTint="#FFFFFF"
                            android:orientation="horizontal"
                        android:visibility="gone"
                        tools:ignore="DuplicateIds">

                        <TextView
                            style="@style/SettingButtonLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="30dp"
                            android:singleLine="true"
                            android:text="@string/addons_activate"
                            android:textColor="#000000"
                            tools:ignore="NestedWeights,RtlSymmetry" />

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="-35dp"
                            android:layout_marginEnd="-8dp"
                            android:src="@drawable/ic_activate"
                            android:tint="#000000"
                            tools:ignore="UseAppTint" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    style="@style/SettingsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:minHeight="60sp"
                    android:text="@string/addons_library_desc" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/exitButton"
            style="@style/SettingButtonLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bkg_button"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:singleLine="true"
            android:text="@string/addons_exit"
            tools:ignore="NestedWeights">

        </TextView>

    </LinearLayout>
</ScrollView>