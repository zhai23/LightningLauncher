<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ThemeOverlay.Standard" parent="android:Theme.Material.NoActionBar">

        <item name="android:windowBackground">#2a2a2c</item>

        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:fontFamily">@font/sansserif</item>
        <item name="android:colorPrimary">#2A2A2C</item>

        <item name="android:spinnerStyle">@style/customSpinner</item>
        <item name="android:labelTextSize">24sp</item>
        <item name="android:textSize">16sp</item>

        
        <item name="colorControlNormal">#FFF</item>
        <item name="android:textColor">#FFF</item>
        <item name="colorAccent">#3364c3</item>

        <item name="buttonCornerRadius">10dp</item>
    </style>

    <style name="SettingTitle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    <style name="SettingSubtitle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">7dp</item>
        <item name="android:paddingEnd">7dp</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="FlipperTitle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>
    <style name="FlipperText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="SettingButtonLabel">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SettingsText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="ToastText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowMinWidthMajor">0%</item>
        <item name="windowMinWidthMinor">0%</item>
        <item name="android:windowMinWidthMajor">0%</item>
        <item name="android:windowMinWidthMinor">0%</item>
    </style>
    <style name="dialogToast" parent="Theme.AppCompat.Dialog.Alert">
        <item name="windowMinWidthMajor">100%</item>
        <item name="windowMinWidthMinor">100%</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>
    <style name="customSwitch">
        <item name="android:foreground">@drawable/bkg_hover_button</item>
        <item name="android:thumb">@drawable/switch_thumb_custom</item>
        <item name="android:track">@drawable/switch_track_custom</item>
    </style>
    <style name="buttonHighlight">
        <item name="android:textColor">#000</item>
        <item name="android:background">@drawable/bkg_button_highlight</item>
        <item name="android:drawableTint">#000</item>
    </style>
    <style name="customSpinner">
        <item name="android:background">@drawable/lc_bkg_spinner</item>
        <item name="android:foregroundGravity">center_vertical|right</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:popupBackground">@drawable/bkg_spinner_popup</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>
</resources>